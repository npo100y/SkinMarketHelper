<UserControl x:Class="SkinMarketHelper.Views.CartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Корзина покупок"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"/>

            <Button Grid.Column="1"
                    Content="Обновить"
                    Command="{Binding RefreshCommand}"
                    Width="90"
                    Height="26"
                    Margin="0,0,10,0"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock Text="Итого: "
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:F2} ₽'}"
                           Foreground="LightGreen"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Основная область -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Список элементов корзины -->
            <ListBox Grid.Column="0"
                     ItemsSource="{Binding CartItems}"
                     SelectedItem="{Binding SelectedCartItem}"
                     BorderThickness="0"
                     Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,8"
                                Padding="8"
                                Background="#FF2D2D2D"
                                CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="130"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding MarketListing.InventoryItem.Item.Name}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding MarketListing.InventoryItem.Item.Game.Name}"
                                               Foreground="LightGray"/>
                                    <TextBlock Text="{Binding MarketListing.InventoryItem.Item.Type}"
                                               Foreground="LightGray"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding MarketListing.Price, StringFormat='{}{0:F2} ₽'}"
                                               Foreground="LightGreen"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding AddedAt, StringFormat='Добавлено: {0:g}'}"
                                               Foreground="Gray"
                                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Детали и действия -->
            <Border Grid.Column="1"
                    Margin="10,0,0,0"
                    Padding="10"
                    Background="#FF2B2B2B"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Детали позиции"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding SelectedCartItem.MarketListing.InventoryItem.Item.Name}"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedCartItem.MarketListing.InventoryItem.Item.Game.Name}"
                                   Foreground="LightGray"/>
                        <TextBlock Text="{Binding SelectedCartItem.MarketListing.InventoryItem.Item.Description}"
                                   TextWrapping="Wrap"
                                   Foreground="White"
                                   Margin="0,5,0,5"/>

                        <TextBlock Text="{Binding SelectedCartItem.MarketListing.Price, StringFormat='Цена: {0:F2} ₽'}"
                                   Foreground="LightGreen"
                                   Margin="0,5,0,0"/>

                        <WrapPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button Content="Удалить из корзины"
                                Command="{Binding RemoveFromCartCommand}"
                                Width="150"
                                Height="30"
                                Margin="0,0,10,0"/>
                            <Button Content="Купить выбранный"
                                Command="{Binding BuySelectedCommand}"
                                Width="140"
                                Height="30"
                                Margin="0,1,0,0"/>
                        </WrapPanel>
                    </StackPanel>
                    
                    <Button Grid.Row="1"
                        Content="Купить всё"
                        Command="{Binding BuyAllCommand}"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Статусная строка -->
        <Border Grid.Row="2"
                Background="#FF303030"
                CornerRadius="3"
                Padding="5"
                Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="White"/>
        </Border>
    </Grid>
</UserControl>
